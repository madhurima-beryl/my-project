<%= simple_form_for @blog, validate: true do |f| %>

  <div class="form-group">
    <%= f.input :title, class: "form-control" %>
  </div>


  <div class="form-group", style= "margin-left: 1px;">
    <%= f.input :description, class: "form-control", html:{id: "description"}  %>

    <%#= f.input :description, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>

<style> 
#blog_description { height: 200px;} 
</style>
