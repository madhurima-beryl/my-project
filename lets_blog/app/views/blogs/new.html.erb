<h2>Create New Blog</h2>

<%= render "form" %>

<script>
  $(document).ready(function () {
  $("#new_blog").validate(
  {
    debug: true,
  
    //error place
    errorPlacement: function (error, element) {
    error.insertAfter(element);
    },
    
    //adding rule
    rules: {  
      "blog[title]": { required: true},
      "blog[description]": { required: true}
    },
    
    // error messages
    messages: {
      "blog[title]": { required:  "*Title can`t be blank" },
      "blog[description]": { required: "*Description can`t be blank"}
    }
    
  });
  });
  
</script>